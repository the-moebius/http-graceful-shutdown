{
  "compilerOptions": {
    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES5",
    "noImplicitReturns": true,
    "strict": true,
    "removeComments": true,
    "lib": [
      "es5",
      "es2015"
    ],
    "outDir": "dist",
    "pretty": true,
    "skipLibCheck": true,
    "strictPropertyInitialization": false,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "dist/types"
  },
  "include": [
    "index.ts",
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
